<?xml version="1.0" encoding="UTF-8" ?>
<schema name="address_collection" version="1.1">
	<types>
		<fieldType name="text_general" class="solr.TextField" />
		<fieldType name="text_address_line" class="solr.TextField"> 
		 <!--analyzer type="index">
            <tokenizer class="solr.WhitespaceTokenizerFactory"/>
			<filter class="solr.LowerCaseFilterFactory"/>
		  </analyzer-->
		  <analyzer type="index"> 
			<tokenizer class="solr.StandardTokenizerFactory"/>
			<!--filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" /-->
			<!-- in this example, we will only use synonyms at query time
			<filter class="solr.SynonymFilterFactory" synonyms="index_synonyms.txt" ignoreCase="true" expand="false"/>
			-->
			<filter class="solr.LowerCaseFilterFactory"/>
		  </analyzer>
		  <analyzer type="query">
			<tokenizer class="solr.StandardTokenizerFactory"/>
			<!--filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" />
			<filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/ -->
			<filter class="solr.LowerCaseFilterFactory"/>
		  </analyzer>
		</fieldType>
	</types>
	<fields>
		<field name="ID" type="text_general" indexed="true" stored="true"/>
		<field name="POST_CODE" type="text_general" indexed="true" stored="true"/>
		<field name="POST_TOWN" type="text_general" indexed="true" stored="true"/>
		<field name="STREET" type="text_general" indexed="true" stored="true"/>
		<field name="STREET_NUMBER" type="text_general" indexed="true" stored="true"/>
		<field name="PREMISE" type="text_general" indexed="true" stored="true"/>
		<field name="SUB_PREMISE" type="text_general" indexed="true" stored="true"/>
		<field name="ORG_NAME" type="text_general" indexed="true" stored="true"/>
		<field name="ADDRESS_LINE" type="text_general" indexed="true" stored="true"/>
		
		<!--copyField source="ADDRESS_LINE" dest="ADDRESS_LINE_COPIED"/--> 
		<copyField source="SUB_PREMISE" dest="ADDRESS_LINE_COPIED"/>
		<copyField source="PREMISE" dest="ADDRESS_LINE_COPIED"/> 
		<copyField source="STREET_NUMBER" dest="ADDRESS_LINE_COPIED"/> 
		<copyField source="STREET" dest="ADDRESS_LINE_COPIED"/> 
		<copyField source="POST_TOWN" dest="ADDRESS_LINE_COPIED"/> 
		<copyField source="POST_CODE" dest="ADDRESS_LINE_COPIED"/>
		<field name="ADDRESS_LINE_COPIED" type="text_address_line" indexed="true" stored="true" multiValued="true"/>
	</fields>
	<uniqueKey>ID</uniqueKey>
</schema>